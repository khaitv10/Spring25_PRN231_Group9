@page
@model CVSTS_FE.Pages.User.ChildManage.DeleteModel

@{
    ViewData["Title"] = "Delete Child";
    Layout = "~/Pages/Shared/_LayoutUser.cshtml";
}

<div class="container mt-4">
    <div class="card border-danger shadow-lg">
        <div class="card-header bg-danger text-white d-flex align-items-center">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <h4 class="mb-0">Confirm Deletion</h4>
        </div>
        <div class="card-body">
            <h5 class="text-danger">Are you sure you want to delete this child?</h5>
            <p class="text-muted">This action cannot be undone.</p>
            <hr />

            <div class="row">
                <div class="col-md-6 fw-bold">Full Name:</div>
                <div class="col-md-6">@Html.DisplayFor(model => model.Child.FullName)</div>

                <div class="col-md-6 fw-bold">Date of Birth:</div>
                <div class="col-md-6">@Html.DisplayFor(model => model.Child.Dob)</div>

                <div class="col-md-6 fw-bold">Gender:</div>
                <div class="col-md-6">
                    @(Model.Child.Gender == "M" ? "Male" : Model.Child.Gender == "F" ? "Female" : "Other")
                </div>

                <div class="col-md-6 fw-bold">Note:</div>
                <div class="col-md-6">@Html.DisplayFor(model => model.Child.Note)</div>

            </div>

            <form method="post" class="mt-4">
                <input type="hidden" asp-for="Child.Id" />

                <div class="btn-group">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Delete
                    </button>
                    <a asp-page="./Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
