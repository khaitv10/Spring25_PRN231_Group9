@page
@model CVSTS_FE.Pages.User.ChildManage.IndexModel

@{
    ViewData["Title"] = "Child Management";
    Layout = "~/Pages/Shared/_LayoutUser.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary"><i class="fas fa-child"></i> Child Management</h2>
        <a asp-page="Create" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> Add New Child
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Childs[0].FullName)</th>
                            <th>@Html.DisplayNameFor(model => model.Childs[0].Dob)</th>
                            <th>@Html.DisplayNameFor(model => model.Childs[0].Gender)</th>
                            <th>@Html.DisplayNameFor(model => model.Childs[0].Note)</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Childs)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Dob)</td>
                                <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                                <td>@Html.DisplayFor(modelItem => item.Note)</td>
                                <td class="text-center">
                                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i> Details
                                    </a>
                                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash-alt"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

