@page
@model CVSTS_FE.Pages.DoseManagement.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DoseSchedule[0].NextDoseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoseSchedule[0].DoseNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoseSchedule[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoseSchedule[0].CreateAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoseSchedule[0].Child)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoseSchedule[0].Service)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoseSchedule[0].Vaccine)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.DoseSchedule) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NextDoseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoseNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Child.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vaccine.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
