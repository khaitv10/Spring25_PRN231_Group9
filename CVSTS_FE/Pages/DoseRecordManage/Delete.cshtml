@page
@model CVSTS_FE.Pages.DoseRecordManage.DeleteModel

@{
    ViewData["Title"] = "Delete Dose Record";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4 border-danger">
        <h2 class="text-center text-danger">Confirm Deletion</h2>
        <hr />
        <p class="text-center fw-bold">Are you sure you want to delete this record?</p>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DoseRecord.DoseDate)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.DoseRecord.DoseDate)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DoseRecord.DoseNumber)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.DoseRecord.DoseNumber)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DoseRecord.Status)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.DoseRecord.Status)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DoseRecord.CreateAt)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.DoseRecord.CreateAt)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DoseRecord.Child)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.DoseRecord.Child.FullName)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DoseRecord.Service)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.DoseRecord.Service.Name)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DoseRecord.Vaccine)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.DoseRecord.Vaccine.Name)</dd>
                </dl>

                <form method="post" class="text-center mt-3">
                    <input type="hidden" asp-for="DoseRecord.Id" />
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                    <a asp-page="./Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
