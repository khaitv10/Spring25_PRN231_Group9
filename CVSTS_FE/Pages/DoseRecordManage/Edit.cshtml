@page
@model CVSTS_FE.Pages.DoseRecordManage.EditModel

@{
    ViewData["Title"] = "Edit Dose Record";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-warning">Edit Dose Record</h2>
        <hr />
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="DoseRecord.Id" />

                    <div class="mb-3">
                        <label asp-for="DoseRecord.DoseDate" class="form-label fw-bold"></label>
                        <input asp-for="DoseRecord.DoseDate" class="form-control" type="date" />
                        <span asp-validation-for="DoseRecord.DoseDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DoseRecord.DoseNumber" class="form-label fw-bold"></label>
                        <input asp-for="DoseRecord.DoseNumber" class="form-control" />
                        <span asp-validation-for="DoseRecord.DoseNumber" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DoseRecord.Status" class="form-label fw-bold"></label>
                        <input asp-for="DoseRecord.Status" class="form-control" />
                        <span asp-validation-for="DoseRecord.Status" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DoseRecord.CreateAt" class="form-label fw-bold"></label>
                        <input asp-for="DoseRecord.CreateAt" class="form-control" />
                        <span asp-validation-for="DoseRecord.CreateAt" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DoseRecords.VaccineId" class="form-label fw-bold"></label>
                        <select asp-for="DoseRecords.VaccineId" class="form-control" asp-items="ViewBag.VaccineId"></select>
                        <span asp-validation-for="DoseRecords.VaccineId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DoseRecords.ChildId" class="form-label fw-bold"></label>
                        <select asp-for="DoseRecords.ChildId" class="form-control" asp-items="ViewBag.ChildId"></select>
                        <span asp-validation-for="DoseRecords.ChildId" class="text-danger"></span>
                    </div>


                    <div class="d-flex justify-content-between mt-3">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-save"></i> Save
                        </button>
                        <a asp-page="./Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
