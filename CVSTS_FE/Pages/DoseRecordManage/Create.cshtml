@page
@model CVSTS_FE.Pages.DoseRecordManage.CreateModel

@{
    ViewData["Title"] = "Create Dose Record";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-primary">Create Dose Record</h2>
        <hr />
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="DoseRecord.DoseDate" class="form-label fw-bold"></label>
                        <input asp-for="DoseRecord.DoseDate" class="form-control" type="date" />
                        <span asp-validation-for="DoseRecord.DoseDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DoseRecord.DoseNumber" class="form-label fw-bold"></label>
                        <input asp-for="DoseRecord.DoseNumber" class="form-control" type="number" />
                        <span asp-validation-for="DoseRecord.DoseNumber" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DoseRecord.Status" class="form-label fw-bold"></label>
                        <input asp-for="DoseRecord.Status" class="form-control" />
                        <span asp-validation-for="DoseRecord.Status" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DoseRecord.ServiceId" class="form-label fw-bold"></label>
                        <select asp-for="DoseRecord.ServiceId" class="form-select" asp-items="ViewBag.ServiceId"></select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DoseRecord.ChildId" class="form-label fw-bold"></label>
                        <select asp-for="DoseRecord.ChildId" class="form-select" asp-items="ViewBag.ChildId"></select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DoseRecord.VaccineId" class="form-label fw-bold"></label>
                        <select asp-for="DoseRecord.VaccineId" class="form-select" asp-items="ViewBag.VaccineId"></select>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-page="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Create
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
