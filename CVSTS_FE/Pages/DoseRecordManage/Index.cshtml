@page
@model CVSTS_FE.Pages.DoseRecordManage.IndexModel

@{
    ViewData["Title"] = "Dose Records";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-primary">Dose Records</h2>
        <hr />
        <div class="d-flex justify-content-between mb-3">
            <a asp-page="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Create New
            </a>
        </div>
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.DoseRecords[0].DoseDate)</th>
                    <th>@Html.DisplayNameFor(model => model.DoseRecords[0].DoseNumber)</th>
                    <th>@Html.DisplayNameFor(model => model.DoseRecords[0].Status)</th>
                    <th>@Html.DisplayNameFor(model => model.DoseRecords[0].ChillName)</th>
                    
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.DoseRecords)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.DoseDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.DoseNumber)</td>
                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                        <td>@Html.DisplayFor(modelItem => item.ChillName)</td>
                        
                        <td>
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
