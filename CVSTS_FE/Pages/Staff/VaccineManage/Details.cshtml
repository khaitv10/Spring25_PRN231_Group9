@page
@model CVSTS_FE.Pages.VaccineManage.DetailsModel

@{
    ViewData["Title"] = "Vaccine Details";
    Layout = "~/Pages/Shared/_LayoutStaff.cshtml";
}

<div class="container mt-4">
    <div class="text-center mb-4">
        <h1 class="fw-bold text-primary">Vaccine Details</h1>
        <p class="lead text-muted">View detailed information about the vaccine.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="card-title">Vaccine Information</h4>
                        <a asp-page="./Edit" asp-route-id="@Model.Vaccine.Id" class="btn btn-outline-info btn-sm">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                    </div>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Vaccine.Name)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Vaccine.Name)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Vaccine.Description)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Vaccine.Description)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Vaccine.Origin)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Vaccine.Origin)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Vaccine.MinAge)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Vaccine.MinAge)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Vaccine.MaxAge)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Vaccine.MaxAge)
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="mt-4">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="stock-tab" data-bs-toggle="tab" data-bs-target="#stock" type="button" role="tab" aria-controls="stock" aria-selected="true">Vaccine Stock</button>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="stock" role="tabpanel" aria-labelledby="stock-tab">
                        <div class="card shadow mt-3">
                            <div class="card-body">
                                @if (Model.VaccineStocks != null && Model.VaccineStocks.Any())
                                {
                                    <table class="table table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th>No.</th>
                                                <th>Quantity</th>
                                                <th>Expiry Date</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                int rowNumber = 1;
                                            }
                                            @foreach (var stock in Model.VaccineStocks)
                                            {
                                                <tr>
                                                    <td>@rowNumber</td>
                                                    <td>@stock.Quantity</td>
                                                    <td>@stock.ExpiryDate.ToString("dd/MM/yyyy")</td>
                                                </tr>
                                                    rowNumber++;
                                            }
                                        </tbody>
                                    </table>
                                }
                                else
                                {
                                    <p>No stock information available for this vaccine.</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-center mt-3">
                <a asp-page="./Index" class="btn btn-secondary">
                    <i class="fas fa-list"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/YOUR_KIT_ID.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}