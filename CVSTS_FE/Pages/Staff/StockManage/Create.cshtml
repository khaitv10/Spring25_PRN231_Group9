@page
@model CVSTS_FE.Pages.Staff.StockManage.CreateModel

@{
    ViewData["Title"] = "Add New Vaccine Stock";
    Layout = "~/Pages/Shared/_LayoutStaff.cshtml";
}

<div class="container mt-4">
    <div class="text-center mb-4">
        <h1 class="fw-bold text-primary">Add New Vaccine Stock</h1>
        <p class="lead text-muted">Enter vaccine stock details to create a new record.</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="VaccineStock.Quantity" class="form-label"></label>
                    <input asp-for="VaccineStock.Quantity" class="form-control" />
                    <span asp-validation-for="VaccineStock.Quantity" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="VaccineStock.ExpiryDate" class="form-label"></label>
                    <input asp-for="VaccineStock.ExpiryDate" class="form-control" type="date" />
                    <span asp-validation-for="VaccineStock.ExpiryDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label name="Vaccine Name" class="form-label"></label>
                    <select asp-for="VaccineStock.VaccineId" class="form-select" asp-items="ViewBag.VaccineId"></select>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-plus"></i> Add
                    </button>
                    <a asp-page="./Index" class="btn btn-secondary">
                        <i class="fas fa-list"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://kit.fontawesome.com/YOUR_KIT_ID.js" crossorigin="anonymous"></script>
}