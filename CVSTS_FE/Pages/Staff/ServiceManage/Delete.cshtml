@page
@model CVSTS_FE.Pages.Staff.ServiceManage.DeleteModel

@{
    ViewData["Title"] = "Delete Service";
    Layout = "~/Pages/Shared/_LayoutStaff.cshtml";
}

@if (ViewData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @ViewData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container mt-4">
    <div class="card shadow-lg rounded-10">
        <div class="card-header bg-danger text-white rounded-top-10">
            <h4 class="mb-0">Delete Service</h4>
        </div>
        <div class="card-body">
            <h3 class="text-danger">Are you sure you want to delete this service?</h3>
            <hr />

            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Service.Name</dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Model.Service.Description</dd>

                        <dt class="col-sm-4">Price</dt>
                        <dd class="col-sm-8">@Model.Service.Price</dd>

                        <dt class="col-sm-4">Total Doses</dt>
                        <dd class="col-sm-8">@Model.Service.TotalDoses</dd>

                        <dt class="col-sm-4">Created At</dt>
                        <dd class="col-sm-8">@Model.Service.CreateAt</dd>

                        <dt class="col-sm-4">Updated At</dt>
                        <dd class="col-sm-8">@Model.Service.UpdateAt</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-10">
                            @Model.Service.Status
                        </dd>
                    </dl>
                </div>
            </div>

            <form method="post" class="mt-4">
                <input type="hidden" asp-for="Service.Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> @(Model.Service.Status ? "Inactive Service" : "Active Service")
                </button>
                <a asp-page="./Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </form>
        </div>
    </div>
</div>