@model CVSTS_FE.Pages.Staff.ServiceManage.DeleteModel

@{

    ViewData["Title"] = "Delete Service";
    Layout = "~/Pages/Shared/_LayoutStaff.cshtml";
}

<h1>Delete</h1>
@if (ViewData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @ViewData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container mt-4">
    <div class="card shadow-lg rounded-10">
        <!-- Added rounded corners -->
        <div class="card-header bg-danger text-white rounded-top-10">
            <!-- Added rounded corners -->
            <h4 class="mb-0">Delete Service</h4>
        </div>
        <div class="card-body">
            <h3 class="text-danger">Are you sure you want to delete this service?</h3>
            <hr />


    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Service.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Service.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Service.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Service.TotalDoses)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.TotalDoses)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Service.CreateAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.CreateAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Service.UpdateAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.UpdateAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Service.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.Status)
        </dd>
    </dl>
   
                       
                    </dl>
                </div>
            </div>

            <form method="post" class="mt-4">
                <input type="hidden" asp-for="Service.Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> @(Model.Service.Status ? "Deactive Service" : "Active Service")
                </button>
                <a asp-page="./Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </form>
        </div>
    </div>
</div>
