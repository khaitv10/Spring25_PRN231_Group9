@page
@model CVSTS_FE.Pages.Staff.ServiceManage.DetailsModel

@{
    ViewData["Title"] = "Service Details";
    Layout = "~/Pages/Shared/_LayoutStaff.cshtml";
}

<div class="container mt-4">
    <h2 class="text-primary"><i class="fas fa-info-circle"></i> Service Details</h2>
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Service.Name)</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Service.Description)</dd>

                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Service.Price)</dd>

                <dt class="col-sm-3">Total Doses</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Service.TotalDoses)</dd>

                <dt class="col-sm-3">Created At</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Service.CreateAt)</dd>

                <dt class="col-sm-3">Updated At</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Service.UpdateAt)</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Service.Status)</dd>
            </dl>

            <h4 class="mt-4">Vaccine Information</h4>
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Vaccine Name</th>
                        <th>Description</th>
                        <th>Origin</th>
                        <th>Min Age</th>
                        <th>Max Age</th>
                        <th>Status</th>
                        <th>Number of Doses</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var vaccine in Model.Service.Vaccine)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => vaccine.VaccineInfo.Name)</td>
                            <td>@Html.DisplayFor(modelItem => vaccine.VaccineInfo.Description)</td>
                            <td>@Html.DisplayFor(modelItem => vaccine.VaccineInfo.Origin)</td>
                            <td>@Html.DisplayFor(modelItem => vaccine.VaccineInfo.MinAge)</td>
                            <td>@Html.DisplayFor(modelItem => vaccine.VaccineInfo.MaxAge)</td>
                            <td>@Html.DisplayFor(modelItem => vaccine.VaccineInfo.Status)</td>
                            <td>@Html.DisplayFor(modelItem => vaccine.NumberOfDose)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="mt-3">
        <a asp-page="./Edit" asp-route-id="@Model.Service.Id" class="btn btn-warning">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-page="./Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>


